<!DOCTYPE html>
<html>
  <head>
    <title>URBORETUM</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div id="wrapper">
      <div id="header">
        <%= image_tag 'urboretum_title.png' %>
      </div>
      <div id="menu">
        <%= render :partial => 'shared/menu' %>
      </div>
      <div id="content">
        <% unless notice.blank? %>
        <p class="notice"><%= notice %></p>
        <% end %>
        <% unless alert.blank? %>
        <p class="alert"><%= alert %></p>
        <% end %>

        <%= yield %>
      </div>
    </div>
  </body>
</html>
